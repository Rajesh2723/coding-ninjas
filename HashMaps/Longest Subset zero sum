#include<unordered_map>
int lengthOfLongestSubsetWithZeroSum(int* arr, int n) {
    unordered_map<int, int> mp;
    int sum=0;
    int maxLength = 0;
    for(int i=0; i<n; i++){
    	sum += arr[i];
        if(sum==0){
            maxLength = max(maxLength, i+1);
        } else if(mp.find(sum) != mp.end()){
            maxLength = max(maxLength, i-mp[sum]);
        } else {
            mp[sum] = i;
        }
    }
    return maxLength;
}
