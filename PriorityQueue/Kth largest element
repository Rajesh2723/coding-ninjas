#include<queue>
int kthLargest(int* arr, int n, int k) {
    priority_queue<int, vector<int>, greater<int> > pq;
    for(int i=0; i<k ; i++){
        pq.push(arr[i]);
    }
    for(int i=k; i<n; i++){
        int min = pq.top();
        if(arr[i] > min){
            pq.pop();
            pq.push(arr[i]);
        }
    }
    return pq.top();
}

//the effective way is to using the priority queue
